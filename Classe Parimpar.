package parimpar;

import javax.swing.JOptionPane;

/**
 *
 * @author Marino
 */
public class Parimpar {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        int numeros=Integer.parseInt(JOptionPane.showInputDialog(null, " Quantos números você deseja digitar?? "));
        int numeros1=Integer.parseInt(JOptionPane.showInputDialog(null, " Qual é o número?? "));
               
        int resultado=numeros1%2;
        
        if(resultado == 0){
            JOptionPane.showMessageDialog(null, " Número Par! ");
            int numerospar[] = new int[1];
            numerospar[0]=numeros1;
            double media;
            media=(numeros)/numerospar[0];
            JOptionPane.showMessageDialog(null, "A média é: " + media);
          
        }
        else{
            JOptionPane.showMessageDialog(null, " Número Impar! ");
            int numerosimpar[] = new int[1];
            numerosimpar[0]=numeros1;
            double media;
            media=(numeros)/numerosimpar[0];
            JOptionPane.showMessageDialog(null, "A média é: " + media);

        }

    }  
}
